        <servlet-name>UserDelServlet</servlet-name>
        <url-pattern>/userdel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestionAdd</servlet-name>
        <servlet-class>com.test.controller.QuestionAdd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionAdd</servlet-name>
        <url-pattern>/questionadd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuestionDel</servlet-name>
        <servlet-class>com.test.controller.QuestionDel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionDel</servlet-name>
