        <servlet-name>QuestionFindById</servlet-name>
        <url-pattern>/questionFindById</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>QuestionUpdate</servlet-name>
        <servlet-class>com.test.controller.QuestionUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionUpdate</servlet-name>
        <url-pattern>/questionupdate</url-pattern>
    </servlet-mapping>
    
    <servlet>
